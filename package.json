{
	"name": "qmk-action-button",
	"displayName": "QMK Action Button",
	"icon": "./icons/dark/qmk_icon.png",
	"publisher": "LukeVan",
	"author": {
		"name": "Luke Van",
		"url": "https://lukevan.me"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lukevanlukevan/qmk-action-button"
	},
	"description": "Adds an action button to run and compile QMK based on the current open file.",
	"version": "0.1.3",
	"engines": {
		"vscode": "^1.88.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "QMK Action Button",
				"properties": {
					"qmkActionButton.runType": {
						"type": "string",
						"enum": [
							"Paste and execute",
							"Paste only"
						],
						"default": "Paste and execute",
						"description": "Behavior when clicking the QMK Action Button. Paste only is useful if extra arguments are needed for the command."
					},
					"qmkActionButton.compileExtra": {
						"type": "string",
						"default": "",
						"description": "Command to append to compile command. Useful for adding extra arguments."
					},
					"qmkActionButton.flashExtra": {
						"type": "string",
						"default": "",
						"description": "Command to append to flash command. Useful for adding extra arguments."
					},
					"qmkActionButton.showSplit": {
						"type": "boolean",
						"default": false,
						"description": "Show flash option for split boards. Define split command below."
					},
					"qmkActionButton.splitCommand": {
						"type": "string",
						"default": "",
						"markdownDescription": "Command to append to flash command when flashing split board. Use {side} for side of split board.\n\nExample: `-bl avrdude-split-{side}`"
					}
				}
			}
		],
		"commands": [
			{
				"command": "qmk-action-button.compile",
				"title": "QMK Compile"
			},
			{
				"command": "qmk-action-button.flash",
				"title": "QMK Flash"
			},
			{
				"command": "qmk-action-button.menu",
				"title": "QMK Actions",
				"icon": {
					"light": "./icons/light/qmk_icon.png",
					"dark": "./icons/dark/qmk_icon.png"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "qmk-action-button.menu",
					"group": "navigation"
				}
			],
			"qmk-action-button.menu": [
				{
					"command": "qmk-action-button.compile"
				},
				{
					"command": "qmk-action-button.flash"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.88.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.8",
		"@vscode/test-electron": "^2.3.9"
	}
}

